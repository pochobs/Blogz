    <article class="post">
        <div class="card">
            <div class="card-header flex-row justify-space-between">
            <h3>{{post.title}}</h3>
            <h4>
                Posted by {{post.User.username}} on {{format_date post.created_at}}.
            </h4>
            </div>
            <div class="card-body">
            <p> {{post.blog_content}} </p>
            </div>
        </div> 
        
    </article>

{{#if loggedIn}}
    <form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button class='btn' type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
    <br>
    <h3 class= "dark"> Comments: </h3>
    <br>
  {{#each post.comments}}
  <section class="comment card">
    <div class="meta card-header">
      {{User.username}} on {{format_date created_at}}
    </div>
    <div class="card-body text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}

</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}